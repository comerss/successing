<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
                android:background="#80000000"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/lySetting"
        android:orientation="horizontal"
        android:background="#FFF6F0F0">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_after_clenr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:layout_centerVertical="true"
            android:text="暂不设置"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:id="@+id/tv_after_wancheng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:text="确定"
            android:textColor="#9F4545"
            android:textSize="16px"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49px"
        android:id="@+id/lyTime"
        android:layout_below="@+id/lySetting"
        android:background="#FFFFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="时"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="91px"
            android:text="分"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="210px"
            android:text="时"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="33px"
            android:text="分"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:layout_below="@+id/lyTime"
        android:orientation="horizontal">

        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/start_hour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </com.qiezzi.choseviewlibrary.lib.WheelView>

        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/start_minute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </com.qiezzi.choseviewlibrary.lib.WheelView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="至"
            android:gravity="center_horizontal"
            android:paddingLeft="5px"
            android:paddingRight="5px"
            android:textColor="#FF191919"
            android:textSize="16sp"/>

        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/end_hour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            >

        </com.qiezzi.choseviewlibrary.lib.WheelView>

        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/end_minute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
        </com.qiezzi.choseviewlibrary.lib.WheelView>

    </LinearLayout>
</RelativeLayout>