<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lySetting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF6F0F0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="暂不设置"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20px"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="确定"
            android:textColor="#9F4545"
            android:textSize="16px"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lyTime"
        android:layout_width="match_parent"
        android:layout_height="49px"
        android:layout_below="@+id/lySetting"
        android:background="#FFFFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="时"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="91px"
            android:text="分"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="210px"
            android:text="时"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="33px"
            android:text="分"
            android:textColor="#FF7F7F7F"
            android:textSize="16px"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/optionspicker"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/options1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/options2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/c_191919"
            android:text="至"
            android:padding="10dp"
            android:layout_gravity="center_vertical"
            />
        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/options3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.qiezzi.choseviewlibrary.lib.WheelView
            android:id="@+id/options4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


</LinearLayout>